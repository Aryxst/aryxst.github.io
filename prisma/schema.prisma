generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Poll {
  id        String @id @default(uuid())
  name      String
  topics    String
  votes     Json
  options   Json
  markdown  String
  thumbnail String
  createdAt String
}
