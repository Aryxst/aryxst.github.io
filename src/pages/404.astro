  basic: {
   title,
   type: 'website',
   url: Astro.url.href,
   image: Astro.url.origin + '/aryxst.jpg',
  },
 }}
/>
<Layout {title} noNavbar>
 <main class='flex h-screen flex-col justify-center text-center'>
