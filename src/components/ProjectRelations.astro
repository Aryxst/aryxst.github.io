---
type Props = {
 role: string;
 teamType: string;
 creationDate: Date;
};
const { role, teamType, creationDate } = Astro.props;
---

<div class='flex flex-col sm:flex-row sm:items-center sm:justify-between sm:mt-16 gap-5'>
 <div class='flex-wrap grow-0 md:my-6'>
  <h3 class='text-base my-0 font-semibold dark:text-neutral-100' style='opacity: 1; transform: none;'>Role</h3>
  <p class='md:mt-2' style='opacity: 1; transform: none;'>{role}</p>
 </div>
 <div class='flex-wrap grow-0 md:my-6'>
  <h3 class='text-base my-0 font-semibold dark:text-neutral-100' style='opacity: 1; transform: none;'>Team</h3>
  <p class='md:mt-2' style='opacity: 1; transform: none;'>{teamType}</p>
 </div>
 <div class='flex-wrap grow-0 md:my-6'>
  <h3 class='my-0 font-semibold dark:text-neutral-100' style='opacity: 1; transform: none;'>Date</h3>
  <p class='md:mt-2' style='opacity: 1; transform: none;'>{creationDate.toDateString().slice(4)}</p>
 </div>
</div>
